@using Cryptography.Bll.Models
@model System.Collections.Generic.List<Cryptography.Bll.Models.FileModel>


<h2>Folder Files:</h2>
<table id="table-content">
    @foreach (FileModel item in Model){
        <tr> 
            <th onclick="GetDetails('@item.Name')">@item.Name</th>
